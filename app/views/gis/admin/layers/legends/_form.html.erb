<%= f.hidden_field :geometry_type %>
<h2><%=@item.locale(:base)%></h2>
<table class="show">
  <tr id="kindTr">
    <th><%= @item.locale(:geometry_type) %></th>
    <td><%= @item.geometry_type_show %></td>
  </tr>
  <tr>
    <th><%= @item.locale(:label_column) %></th>
    <td><%= f.select :label_column, @item.label_column_select %></td>
  </tr>
  <tr>
    <th><%= @item.locale(:label_color) %></th>
    <td><%= f.text_field :label_color, :class=>"colorPicker" %></td>
  </tr>
  <tr id="labelPosition">
    <th><%= @item.locale(:label_position) %></th>
    <td><%= f.select :label_position, @item.label_position_select %></td>
  </tr>
  <tr>
    <th><%= @item.locale(:label_size) %></th>
    <td><%= f.select :label_size, @item.label_size_select %></td>
  </tr>
</table>

<h2><%=@item.locale(:draw)%></h2>
<table class="show">
  <tr id="point">
    <th><%= @item.locale(:point_color) %></th>
    <td>
      <%= f.text_field :point_color, :class=>"colorPicker" %>
      <%= f.check_box :point_fill, fill_check(@item.point_fill), 0, 1 %> <label for="item_point_fill">表示しない</label>
    </td>
  </tr>
  <tr id="line1">
    <th><%= @item.locale(:line_color) %></th>
    <td>
      <%= f.text_field :line_color, :class=>"colorPicker" %>
      <%= f.check_box :line_fill, fill_check(@item.line_fill), 0, 1 %> <label for="item_line_fill">表示しない</label>
    </td>
  </tr>
  <tr id="line2">
    <th><%= @item.locale(:line_width) %></th>
    <td><%= f.select :line_width, @item.line_width_select %></td>
  </tr>
  <tr id="polygon">
    <th><%= @item.locale(:polygon_color) %></th>
    <td>
      <%= f.text_field :polygon_color, :class=>"colorPicker" %>
      <%= f.check_box :polygon_fill, fill_check(@item.polygon_fill), 0, 1 %> <label for="item_polygon_fill">表示しない</label>
    </td>
  </tr>
</table>
