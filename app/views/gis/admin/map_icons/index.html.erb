<table class="index">

  <tr>
    <th>詳細</th>
    <th style="width: 60px;">ID</th>
    <th style="width: ;">管理用タイトル</th>
    <th style="width: 60px;">状態</th>
    <th style="width: 60px;">並び順</th>
    <th style="width: 80px;">更新日</th>
    <th>更新者</th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class=cycle' %>>
    <td class="showLink"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td><%=h item.id %></td>
    <td><%=image_tag(item.file_uri)%> <%=h item.title %></td>
    <td ><%= item.status_show %></td>
    <td ><%= item.sort_no %></td>
    <td><%= safe{item.updated_at.strftime("%Y-%m-%d")} %></td>
    <td><%=item.updated_user%></td>
  </tr>
  <% end unless @items.blank? %>

</table>

<%= paginate @items %>
