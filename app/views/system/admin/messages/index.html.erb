<table class="index">

  <tr>
    <th>詳細</th>
    <th style="width: 60px;">ID</th>
    <th style="width: 120px;">公開日時</th>
    <th style="width: ;">タイトル</th>
    <th style="width: 60px;">状態</th>
  </tr>

  <% for item in @items %>
  <tr <%= cycle '', 'class=cycle' %>>
    <td class="showLink"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td><%=h item.id %></td>
    <td><%=h item.published_at.strftime('%Y-%m-%d %H:%M') %></td>
    <td><%=h item.title %></td>
    <td ><%= item.status_show %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
