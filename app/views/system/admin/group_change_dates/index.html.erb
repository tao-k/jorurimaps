<% if @items.blank? %>
<div class="notice">表示対象がありません</div>
<% else %>
<table class="index">
  <tr>
    <th></th>
    <th>開始日</th>
  </tr>
  <%for item in @items%>
  <tr>
    <td class="showLink"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td><%=safe{item.start_at.strftime("%Y-%m-%d %H:%M")}%></td>
  </tr>
  <% end %>
</table>
<%= paginate @items %>
<% end %>
