<%= render :partial => 'search' %>

<% if @items.present? %>
<div><%= @items.total_entries %>件登録しています。</div>
<table class="index">
  <tr>
    <th>詳細</th>
    <th>権限名</th>
    <th>権限コード</th>
  </tr>
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="showLink"><%= link_to '詳細', {:action => :show, :id => item.id} %></td>
    <td><%= item.name %></td>
    <td><%= item.priv_code %></td>
  </tr>
  <% end %>
</table>
<%= paginate @items %>
<% else %>
<div>登録がありません。</div>
<% end %>