<div class="piece AdminMessage">

<div class="pieceBody">


<table class="index">
  <tbody>
    <tr>
      <th>詳細</th>
      <th>機能名</th>
      <th>機能コード</th>
      <th style="width: 40px; text-align: center;">表示順</th>
    </tr>
    <% for item in @items %>
    <tr class="<%= cycle '', 'cycle' %>">
      <td class="showLink"><%= link_to '詳細', "#{url_for({:action=>:show, :id=>item.id})}?#{@qs}"  %></td>
      <td><%= item.display_name %></td>
      <td><%= item.table_name %></td>
      <td style="text-align: center;"><%= item.sort_no %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= paginate @items %>
<br/>

</div>
</div>