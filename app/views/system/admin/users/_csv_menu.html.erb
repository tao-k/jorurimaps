<div class="indexTabs">
  <% if params[:action] == "csvget" %>
  <span>CSV出力</span>
  <% else %>
  <%= link_to 'CSV出力', url_for({:action=>:csvget}) %>
  <% end %>

  <% if params[:action] == "csvup" %>
  <span>CSV登録</span>
  <% else %>
  <%= link_to 'CSV登録', url_for({:action=>:csvup}) %>
  <% end %>

  <% if params[:action] == "csv" %>
  <span>CSV仮データ</span>
  <% else %>
  <%= link_to 'CSV仮データ', url_for({:action=>:csv}) %>
  <% end %>

  <% if params[:action] == "csvset" %>
  <span>CSV登録反映</span>
  <% else %>
  <%= link_to 'CSV登録反映', url_for({:action=>:csvset}) %>
  <% end %>
