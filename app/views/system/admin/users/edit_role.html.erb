<%= form_for :item, :url => {:action => :update_role}, :html => {:method => :put, :id => 'itemForm'} do |f| %>
  <%= f.error_messages %>
  <%= render :partial => 'form_role', :locals => {:f => f} %>
  <%= button_tag '戻る', :type => :button, :onclick => "document.location='#{url_for(:action => :index)}';" %>
  <%= f.submit 'この内容で登録する' %>
<% end %>
